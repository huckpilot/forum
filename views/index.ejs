<!DOCTYPE html>
<head>
<style>
@import url(http://fonts.googleapis.com/css?family=Raleway:900);
@import url(http://fonts.googleapis.com/css?family=Slabo+27px);
body {
    background-color: #dee;
}

h1 {
    color: #545444;
    padding-left: 50px;
} 
button {
    margin-left: 45px;
}
a:link {
    text-decoration: none;
    color: #545444;
}

a:visited {
    text-decoration: none;
    color: #2c2625;
}

a:hover {
    /*text-decoration: underline;*/
    color: #2c2625;
}

a:active {
    /*text-decoration: underline;*/
    color: #2c2625;
}
ul {
    list-style-type: none;
}
li#posts {
    /*border-color: #5c4a33;*/
    /*border-style: solid;*/
    /*border-width: 2px;*/
    /*border-bottom-right-radius: 10px; */
    margin: 6px;
    padding: 13px;
    border-radius: 3px;
    text-decoration: none;
    font-family : Raleway;
    background-color: rgba(255, 255, 255, .5);
    /*box-shadow: 0px 4px 0px 0px #2a2423;*/
}
li#posts:hover {
    /*border-color: #5c4a33;*/
    /*border-style: solid;*/
    /*border-width: 2px;*/
    /*border-bottom-right-radius: 10px; */
    margin: 6px;
    padding: 13px;
    border-radius: 3px;
    text-decoration: none;
    font-family : Raleway;
    background-color: rgba(255, 255, 255, .9);
    /*box-shadow: 0px 4px 0px 0px #2a2423;*/
}
li#categories {
/*  border-color: #5c4a33;
    border-style: solid;
    border-width: 2px;*/
    float: left; 
    width: 100px;
    border-radius: 3px; 
    margin: 6px;
    font-family : Raleway;
    font-size: 2em;
    padding: 30px;
    background-color: rgba(255, 255, 255, .5);
    /*box-shadow: 0px 4px 0px 0px #2a2423;*/
    text-align: center;
}
li#categories:hover {
/*  border-color: #5c4a33;
    border-style: solid;
    border-width: 2px;*/
    float: left; 
    width: 100px;
    border-radius: 3px; 
    margin: 6px;
    font-family : Raleway;
    font-size: 2em;
    padding: 30px;
    background-color: rgba(255, 255, 255, .9);
    /*box-shadow: 0px 4px 0px 0px #2a2423;*/
    text-align: center;
}
div#postBox {
    width: 45%;
    display: inline-block;
    position: relative;
}
div#catBox {
    width: 45%;
    display: inline-block;
    position: absolute;
}
div#logo{
    width: 60%;
    background-color: rgba(255, 255, 255, .5);
    margin-top: 20px;
    margin-left: 10px;
    padding-top: 5px;
    padding-left: 35px;
    border-right: #8fed84 solid 10px;
}

</style>
</head>
<body>

<div id="logo">
<a href="http://imgur.com/1plKxi4"><img src="http://i.imgur.com/1plKxi4.png" title="source: imgur.com" /></a>
</div>

<div id="postBox">
<h1>Roots</h1>
<ul>
  <% for(var i = 0; i < pTitles.length; i++){ %>
  <li id="posts"><a href="/category/<%= pTitles[i].category_id %>/post/<%= pTitles[i].id %>"><%= pTitles[i].body %></a></li> <% } %>
</ul>
<button><a href="/forum?offset=<%= paginationDwn %>">Newer seeds</a></button>
<button><a href="/forum?offset=<%= paginationUp %>">Older seeds</a></button>
</div>


<div id="catBox">
<h1>Seeds</h1>
<ul>
  <% for(var i = 0; i < cTitles.length; i++){ %>
  <li id="categories"><a href="/category/<%= cTitles[i].id %>"><%= cTitles[i].title %></a></li> <% } %>
</ul>
</br>
<button><a href="/categories/new">Add a new category</a></button>
<button><a href="/categories">See all categories</a></button>
</div>
