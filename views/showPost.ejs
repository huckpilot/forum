<!DOCTYPE html>
<body>
  <h1><%= thisPost.title %></h1>
  <h5><%= thisPost.body %></h5>
  </br>
  <div>
    <img src="<%= thisPost.image %>"
  </div>

  </br>


  <form method="POST" action="/category/<%= thisPost.category_id %>/post/<%= thisPost.id %>/comments">
    <input type="text" name="body" placeholder="comment here">
    <button>Add comment</button>
  </form>

  <div>
  <ul>
    <% for(var i = 0; i < comments.length; i++){ %>
    <li><%= comments[i].body %></li> <% } %>
  </ul>
  </div>

  <form method="POST" action="/post/<%= thisPost.id %>?_method=DELETE">
    <button>Delete this post</button>
  </form>


  <a href="/category/<%= thisPost.category_id %>">Go back to the category</a>
</body>