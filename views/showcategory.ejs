<!DOCTYPE html>
<body>
  <h1><%= thisCategory.title %></h1>
  </br>
    <form action="/subscriptions" method="POST">
      <input type="text" name="email" placeholder="Add email to subscribe" required>
      <input type="hidden" name="category_id" value="<%= thisCategory.id %>">
      <button>Subscribe to this seed</button>
    </form>
  </br>
  <ul>
  <% for(var i = 0; i < posts.length; i++){ %>
  <li><a href="/category/<%= thisCategory.id %>/post/<%= posts[i].id %>"><%= posts[i].title %></a></li> <% } %>
  </ul>
  </br>
  <% if(err) { %>
  <p><%= err %></p>
  <% } %>
  <form method="POST" action="/category/<%= thisCategory.id %>?_method=DELETE">
    <button>Delete this category</button>
  </form>
  </br>
  <a href="/category/<%= thisCategory.id %>/newpost">Create a new post</a>
  </br>
  <a href="/categories">Go back to categories list</a>
</body>